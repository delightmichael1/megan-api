{
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "build",
        "lib": ["es2022"],
        "sourceMap": true,
        "module": "es2022",
        "target": "es2022",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/utils/*": ["utils/*"],
            "@/models/*": ["models/*"],
            "@/handlers/*": ["handlers/*"]
        }
    },
    "include": ["src"],
    "compileOnSave": true,
    "exclude": ["node_modules"]
}
